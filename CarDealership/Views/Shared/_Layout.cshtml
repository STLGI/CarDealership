<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CarDealership - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarDealership.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h2>CarDealership</h2></a>
            </div>
        </nav>
    </header>
    <div class="container-fluid mt-0">
        <div class="row d-flex nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 border-end box-shadow" style=" background-color:aliceblue;">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-dark min-vh-100 sticky-top">
                    <ul class="text-nowrap nav nav-pills flex-column mb-sm-auto mb-0 p-2 mt-0 fs-4 object-fit-cover">
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle px-0" style="color:darkslategrey">
                                <img src="~/img/ProfilePic.png" class="rounded-circle col" width="25" height="25" />
                                <span class="col-2 d-none d-sm-inline">Profile</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle px-0 ps-1 ps-md-0" style="color:darkslategrey">
                                <i class="bi bi-box"></i>
                                <span class="col-2 d-none d-sm-inline">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link align-middle px-0 ps-1 ps-md-0 " style="color:darkslategrey">
                                <i class="bi bi-speedometer"></i>
                                <span class="col-2 d-none d-sm-inline">Assets</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link align-middle px-0 ps-1 ps-md-0" style="color:darkslategrey">
                                <i class="bi bi-car-front-fill"></i>
                                <span class="col-2 d-none d-sm-inline">Booking</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link align-middle px-0 ps-1 ps-md-0" style="color:darkslategrey">
                                <i class="bi bi-bag"></i>
                                <span class="col-2 d-none d-sm-inline">Sell cars</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link align-middle px-0 ps-1 ps-md-0" style="color:darkslategrey">
                                <i class="bi bi-stripe"></i>
                                <span class="col-2 d-none d-sm-inline">Services</span>
                            </a>
                        </li>
                    </ul>
                    <div class="pb-4 mb-5 text-nowrap fs-4">
                        <a href="#" class="nav-link align-middle px-0" style="color:darkslategrey">
                            <i class="bi bi-tools"></i>
                            <span class="col-2 d-none d-sm-inline">Settings</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="container col p-3">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
</body>
@await RenderSectionAsync("Scripts", required: false)
</html>